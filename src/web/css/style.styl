.inactive
  display none !important

#welcome
  width 100%

  display flex
  flex-direction column
  justify-content center
  align-items center

  background url('../assets/img/bg.jpg') center
  background-size cover

#welcome-logo
  height 50%

#add-player, #new-tournament
  position absolute
  background white
  top 0
  left 0
  box-shadow 2px 2px 35px rgba(black, .5)

  width 100%
  max-height 60%

  overflow auto

  z-index 50

#nothing
  width 100%
  text-align center
  padding 5em
  opacity .3

#players tbody tr.dropped
  opacity .5

#no-cut
  form
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100%
    width 100%

#timer-large
  font-size 20vw
  text-align center

#web-services
  display flex
  flex-direction column
  align-items center
  height 100%
  padding 5em

  #qr
    flex 1

  #monolith-link
    padding 1em
    user-select auto !important
