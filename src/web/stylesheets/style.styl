*
  margin 0
  padding 0
  box-sizing border-box

  font-family "Roboto"

//Base colors
bgcolor = #2E3440
bghilit = #3B4252
text = #4C566A
texthilit = #ECEFF4

//Accent colors
nblue = #5E81AC
nred = #BF616A
norange = #D08770
nyellow = #EBCB8B
ngreen = #A3BE8C
nviolet = #B48EAD

//Spacing
spacing-tiny = 8px
spacing-small = 16px
spacing-base = 24px
spacing-large = 48px
spacing-xlarge = 64px

//Font size
size-title1 = 44px
size-title2 = 32px
size-title3 = 24px
size-large = 19px
size-regular = 17px
size-small = 14px
size-micro = 8px

//Text color classes
.blue
  color nblue
.red
  color nred
.orange
  color norange
.yellow
  color nyellow
.green
  color ngreen
.blue
  color nviolet

//Font size classes
.large
  font-size size-large

//Globals
body
  min-width 100vw
  min-height 100vh
  background bgcolor

h1, h2, h3
  font-family "Roboto", "Helvetica", "Arial", sans-serif
  color texthilit
  text-align center

h1
  font-weight 900
  font-size size-title1
  padding spacing-base

h2
  font-weight 700
  font-size size-title2
  padding spacing-base

h3
  font-weight 700
  font-size size-title3
  padding spacing-base

a
  text-decoration none
  color text

input[type='text']
  background none
  appearance none
  outline none
  border none

  font-size size-small
  color texthilit
  padding spacing-small
  border-bottom 1px bghilit solid

  transition all .4s ease-in-out

  &:focus
    background bghilit

.button
  appearance none
  outline none
  padding spacing-small
  margin spacing-small
  color text

  border 1px text solid
  border-radius 5px

  transition all .7s ease-in-out

  &:active, &:hover
    color texthilit
    border-color texthilit

  &.important
    color texthilit
    border-color texthilit
    &:active, &hover
      background texthilit

  &.yellow
    &:active, &:hover
      border-color nyellow
      background nyellow
      color text

.hidden
  display none

//Flex classes
.center
  display flex
  align-items center
  justify-content center

.column
  display flex
  flex-direction column
  justify-content center
  align-items center

.row
  display flex
  justify-content space-around

.wrapper
  height 100%
  width 100%

.container
  max-width 960px
  margin auto


//=====================================================================================
#main-header, #main-logo, .component
  animation loadComponent 1.2s ease-in-out

#main-logo
  height 40%
  width auto

#main-menu
  width 100%

  .button
    opacity 0
    width 100%
    animation loadComponent 1.2s ease-in-out
    animation-fill-mode forwards

  .button:nth-of-type(1)
    animation-delay 0.2s
  .button:nth-of-type(2)
    animation-delay 0.4s
  .button:nth-of-type(3)
    animation-delay 0.6s

#create
  input[type='text']
    margin spacing-tiny
    width 100%
  .button
    text-align center
    width 100%

//=====================================================================================

//Animations
@keyframes loadComponent
  0%
    transform translateY(-10%)
    opacity 0
  100%
    transform translateY(0)
    opacity 1

@keyframes fadeComponent
  0%
    transform translateY(0)
    opacity 1
  100%
    transform translateY(-10%)
    opacity 0
