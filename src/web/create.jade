extends layout

block content
  .wrapper.component.center
    .container.column#create
      h1#create-header New Tournament
      .row.full
        input(type="text", placeholder="Tournament name...")#name.large
      .row.full
        input(type="text", placeholder="Host...")#host
        input(type="text", placeholder="Location...")#location
      .row.full
        select.full#rank Tournament rank...
          option(value="casual") Casual/Game Night Kit
          option(value="store") Store Championship
          option(value="regionals") Regional Championship
          option(value="nationals") National Championship
          option(value="worlds") World Championship
      a(href="#").button.large#create-button Create
      a(href="#").secondary#return Return
  script(src="scripts/create.js")
