
// Golden by MrHudson
// triggerssss

doctype html
html

  head
    meta(charset="utf-8")

    link(rel='stylesheet', href="css/photon.min.css")
    link(rel='stylesheet', href="css/netrunner.css")
    link(rel='stylesheet', href="css/style.styl")

    script(src="js/utils.js")

    title Golden

  body
    #toasts
    #quickscore.padded-more.inactive
      form#form-quickscore
        .form-group
          label Table
          input(type="number").form-control#quickscore-table
        .form-group
          label#quickscore-p1name Player 1
          input(type="number", placeholder="Score...").form-control#quickscore-p1
        .form-group
          label#quickscore-p2name Player 2
          input(type="number", placeholder="Score...").form-control#quickscore-p2
        .form-group
          input(type="submit", value="Score").btn.btn-primary.btn-large
        .form-group
          button.btn.btn-default.btn-mini#quickscore-close Close

    .window
      header.toolbar
        .toolbar-actions
          .btn-group
            button(title="Save (Ctrl+S)").btn.btn-default#btn-save-tournament
              i.icon.icon-download
              span.padded-less Save
            button(title="End tournament and showcase").btn.btn-default
              i.icon.icon-publish
            button(title="End tournament").btn.btn-default
              i.icon.icon-cancel
          .btn-group
            button(title="Add player (Ctrl+P)").btn.btn-default#btn-add-player
              i.icon.icon-user-add
              span.padded-less Add player
            button(title="New round (Ctrl+U)").btn.btn-default#btn-new-round
              i.icon.icon-paper-plane
              span.padded-less New Round
            button(title="Quickscore (Ctrl+I)").btn.btn-default#btn-quickscore
              i.icon.icon-gauge

      .window-content
        include addplayer

        include newtournament

        .pane-group
          .pane-sm.sidebar
            h2.padded-horizontally-more#menu-timer 00:00
            nav.nav-group
              h5.nav-group-title Swiss
              a.nav-group-item#nav-welcome Welcome
              a.nav-group-item#nav-players Players
              a.nav-group-item#nav-rounds Rounds
              a.nav-group-item#nav-matches Matches
            nav.nav-group
              h5.nav-group-title Progression Cut
              a.nav-group-item#nav-cut Matches

            nav.nav-group
              h5.nav-group-title Utilities
              a.nav-group-item#nav-timer Timer
              a.nav-group-item#nav-web Web Services
              a.nav-group-item#nav-history Save History

          .pane.page#welcome
            include welcome
          .pane.page.inactive#players
            include players
          .pane.page.inactive#rounds
            include rounds
          .pane.page.inactive#matches
            include matches
          .pane.page.inactive#cut
            include cut
          .pane.page.inactive#timer
            include timer
          .pane.page.inactive#web
            include web
          .pane.page.inactive#history
            include history


    script(src="js/main.js")
    script(src="js/pagination.js")
    script(src="js/cut.js")
    script(src="js/time.js")
